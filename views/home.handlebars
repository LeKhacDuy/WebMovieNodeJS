<div id="main_carousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        {{#each carousel}}
        {{#if this.index}}
        <div class="carousel-item">
            <img src="{{this.src}}" class="d-block w-100 carousel_img" alt="..." data-bs-interval="6000">
        </div>
        {{else}}
        <div class="carousel-item active">
            <img src="{{this.src}}" class="d-block w-100 carousel_img" alt="..." data-bs-interval="6000">
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>
<div class="container py-5">
    <h3>Opening this week</h3>
    <hr>
    <div class="d-flex mb-4 align-items-center">
        <a class="ms-auto me-1" href="/user/movie">See more..</a>
    </div>
    <div id="open_movie" class="list_movie"></div>
    <div class="title_wrap">
        <h3>Coming soon</h3>
    </div>
    <hr>
    <div id="coming_movie" class="list_movie"></div>
    <h3 class="text-center my-4">New Trailer</h3>
    <hr>
    <div id="list_trailer"></div>
</div>