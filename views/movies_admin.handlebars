<div class="main-body">
    <div class="body-header">
        <h4>Movies List</h4>
        <div class="content_btn">
            <button type="button" class="btn btn-success " data-bs-toggle="modal"
                data-bs-target="#movies_add-modal">Add</button>
            <button id="delete_selected-movies" type="button" class="btn btn-danger "
                >Delete Selected</button>
        </div>
    </div>
    <table id="table_movies" class="table">
        <thead class="content_title">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Movie Name</th>
                <th scope="col">Poster</th>
                <th scope="col">Trailer</th>
                <th scope="col">Delete</th>
                <th scope="col" colspan="2">Modify</th>
            </tr>
        </thead>
        <tbody id="list_movies" class="content_list">
            <tr>
                <th scope="row">1</th>
                <td>Aladdin</td>
                <td><img class="movies_img" src="/images/Movie/aladdin.jpg" alt=""></td>
                <td><iframe width="300" height="200" src="https://www.youtube.com/embed/VcBllhVj1eA"
                        title="ALADDIN Trailer (2019)" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        allowfullscreen></iframe></td>
                <td><label class="content_checkbox-outer"><input type="checkbox" id="movie1" class="content_checkbox"
                            name="movie1"><span class="checkmark"></span></label></td>
                <td><button type="button" class="btn btn-outline-warning" data-bs-toggle="modal"
                        data-bs-target="#movies_edit-modal">Edit</button></td>
            </tr>
        </tbody>
    </table>
    <div class="modal fade" id="movies_add-modal" tabindex="-1" aria-labelledby="movies_add-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable big_modal">
            <div class="modal-content add_modal">
                <div class="modal-header">
                    <h4 class="modal-title" id="movies_add-label">Add Movie</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Movie Name</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="movie_name" class="form-control" placeholder="Enter movie name">
                    </div>
                    <p>Movie Poster</p>
                    <div class="mb-3 add_image-outer">
                        <input class="form-control" type="file" id="movie_img">
                    </div>
                    <p>Movie Trailer Link</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="movie_trailer" class="form-control"
                            placeholder="Enter movie trailer link">
                    </div>
                    <p>Movie Duration</p>
                    <div class="input-group flex-nowrap">
                        <input type="number" id="movie_duration" class="form-control"
                            placeholder="Enter movie duration (s)">
                    </div>
                    <p>Movie Release Date</p>
                    <div class="input-group flex-nowrap">
                        <input type="date" id="movie_rel_date" class="form-control">
                    </div>
                    <p>Movie Description</p>
                    <div class="input-group flex-nowrap">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                            placeholder="Enter movie description"></textarea>
                    </div>
                    <p>Movie Category</p>
                    <div class="container">
                        <div class="row">
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Action</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category" value="action"><span class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Comedy</label>

                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category" value="comedy"><span class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Drama</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category" value="drama"><span class="checkmark"></span></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Fantasty</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category" value="fantasty"><span class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Romance</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category" value="romance"><span class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Horror</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category" value=""><span class="checkmark"></span></label>
                            </div>
                        </div>
                    </div>
                    <p>Movie Status</p>
                    <div class="container">
                        <div class="row">
                            <div class="col col_movie_radio">
                                <label for="" class="status_title">Now</label>
                                <label class="content_checkbox-outer"><input type="radio" class="content_checkbox"
                                        name="movie_category" value="action"><span
                                        class="checkmark checkmark_radio"></span></label>
                            </div>
                            <div class="col col_movie_radio">
                                <label for="" class="status_title">Up Coming</label>
                                <label class="content_checkbox-outer"><input type="radio" class="content_checkbox"
                                        name="movie_category" value="comedy"><span
                                        class="checkmark checkmark_radio"></span></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btn_add-movie" class="btn btn-primary" data-bs-dismiss="modal">Add
                        movie</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="movies_edit-modal" tabindex="-1" aria-labelledby="movies_edit-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable big_modal">
            <div class="modal-content add_modal">
                <div class="modal-header">
                    <h4 class="modal-title" id="movies_edit-label">Edit Movie</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Movie Name</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="movie_name-edit" class="form-control" placeholder="Enter movie name">
                    </div>
                    <p>Movie Poster</p>
                    <div class="mb-3 add_image-outer">
                        <input class="form-control" type="file" id="movie_img-edit">
                    </div>
                    <p>Movie Trailer Link</p>
                    <div class="input-group flex-nowrap">
                        <input type="text" id="movie_trailer-edit" class="form-control"
                            placeholder="Enter movie trailer link">
                    </div>
                    <p>Movie Duration</p>
                    <div class="input-group flex-nowrap">
                        <input type="number" id="movie_duration-edit" class="form-control"
                            placeholder="Enter movie duration (s)">
                    </div>
                    <p>Movie Release Date</p>
                    <div class="input-group flex-nowrap">
                        <input type="date" id="movie_rel_date-edit" class="form-control">
                    </div>
                    <p>Movie Description</p>
                    <div class="input-group flex-nowrap">
                        <textarea class="form-control" id="movie_des-edit" rows="3"
                            placeholder="Enter movie description"></textarea>
                    </div>
                    <p>Movie Category</p>
                    <div class="container">
                        <div class="row">
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Action</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category-edit" value="action"><span
                                        class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Comedy</label>

                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category-edit" value="comedy"><span
                                        class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Drama</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category-edit" value="drama"><span class="checkmark"></span></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Fantasty</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category-edit" value="fantasty"><span
                                        class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Romance</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category-edit" value="romance"><span
                                        class="checkmark"></span></label>
                            </div>
                            <div class="col col_movie_checkbox">
                                <label for="" class="category_title">Horror</label>
                                <label class="content_checkbox-outer"><input type="checkbox" class="content_checkbox"
                                        name="movie_category-edit" value=""><span
                                        class="checkmark"></span></label>
                            </div>
                        </div>
                    </div>
                    <p>Movie Status</p>
                    <div class="container">
                        <div class="row">
                            <div class="col col_movie_radio">
                                <label for="" class="status_title">Now</label>
                                <label class="content_checkbox-outer"><input type="radio" class="content_checkbox"
                                        name="movie_status-edit" value="now"><span
                                        class="checkmark checkmark_radio"></span></label>
                            </div>
                            <div class="col col_movie_radio">
                                <label for="" class="status_title">Up Coming</label>
                                <label class="content_checkbox-outer"><input type="radio" class="content_checkbox"
                                        name="movie_status-edit" value="upcoming"><span
                                        class="checkmark checkmark_radio"></span></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btn_edit-movie" class="btn btn-primary"
                        data-bs-dismiss="modal">Edit Movie</button>
                </div>
            </div>
        </div>
    </div>
</div>